{
  "name": "CyberNetCall",
  "short_name": "CNC",
  "description": "Peer-to-peer communication app using WebRTC.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#f4f7fc", /* Light background */
  "theme_color": "#0056b3", /* Darker blue */
  "orientation": "any", /* Allow any orientation */
  "icons": [
    {
      "src": "/static/cnc/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/static/cnc/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/static/cnc/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable" /* Important for adaptive icons */
    },
    /* Add apple-touch-icon reference if you have the file */
    {
      "src": "/static/cnc/icons/apple-touch-icon.png", /* Example path */
      "sizes": "180x180", /* Common size */
      "type": "image/png"
      /* No purpose needed for apple-touch-icon */
    }
  ]
}
